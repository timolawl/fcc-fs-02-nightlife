doctype html
html(lang='en')
  head
    title bar none., a Free Code Camp Project
    script(src='/static/js/pre.bundle.js')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Montserrat|Bevan|Roboto')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.1/css/foundation.min.css' integrity='sha256-itWEYdFWzZPBG78bJOOiQIn06QCgN/F0wMDcC4nOhxY=' crossorigin='anonymous')
    link(rel='stylesheet' href='/static/css/style.css')
  body
    .modal
      .twitter
        button(class='btn btn-block btn-social btn-twitter')
          i(class='fa fa-twitter') Sign in with Twitter
      .facebook
        button(class='btn btn-block btn-social btn-facebook')
          i(class='fa fa-facebook') Sign in with Facebook
    section.mainbox(class='callout text-center')
      div.mainbox__titlerow(class='row')
        div(class='medium-8 large-8 column')
          .mainbox__title.mainbox__title--nc(class='text-left') Nightlife Coordinator
        div(class='medium-4 large-4 column')
          .mainbox__title.mainbox__title--bn(class='text-right') bar none.
      div.mainbox__titlerow--top.display--hide(class='row')
        div(class='medium-4 large-4 column')
          .mainbox__title.mainbox__title--bn(class='text-left')
            a(href='/') bar none.
        //div(class='medium-8 large-8 column')
        //  .mainbox__title.mainbox__title--nc(class='text-right') Nightlife Coordinator
      form.mainbox__search
        div(class='input-group')
          input.mainbox__search--input(type='text' placeholder='Search for bars around...' class='input-group-field')
          a.mainbox__search--submit(class='input-group-button button secondary') Search
      span.mainbox__subtitle(class='text-center') A 
        a(href='https://www.freecodecamp.com') Free Code Camp 
      span.mainbox__subtitle Project
      br
      button.mainbox__log-button(class='button secondary' role='button') Log In
    .overlay.visibility--hide
